/* component/progressBar/progressBar.wxss */
.list {
    height: 30px;
    width:100%;
    display: flex;
    align-items:  center;
    margin-bottom: 15px;
}
.list .left {
    width:30px;
    height: 30px;
    margin-right: 10px;
}
.list .left .img{
    width:100%;
    height: 100%;
}
.list .middle  {
    flex:1;
}

.list .middle .top {
    text-align: center;
    font-size: 14px;
    color:#aaa
}
.list .middle .bottom {
    background: #eee;
    height: 6px;
    position: relative;
    border-radius: 10px;
}

.list .middle .bottom .child{
    position: absolute;
    height: 100%;
    width: 70%;
    background: lightblue;
    border-radius: 10px;
}
.list .right {
    margin-top: 10px;
    margin-right: 10px;
    margin-left: 10px;
    color:rgb(199, 192, 192)
}